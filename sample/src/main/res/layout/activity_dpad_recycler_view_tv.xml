<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_content_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/activity_dpad_tv_recycler_view_flow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:flow_verticalStyle="packed"
        app:flow_maxElementsWrap="1"
        app:flow_verticalGap="8dp"
        android:focusable="false"
        app:constraint_referenced_ids="activity_dpad_tv_recycler_view_text_view_visible_items,
        activity_dpad_tv_recycler_view_text_view_new_visible_items"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/activity_dpad_tv_recycler_view_text_view_visible_items"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_default="wrap"
        android:text="@string/view_port_viewed_items" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/activity_dpad_tv_recycler_view_text_view_new_visible_items"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_default="wrap"
        android:text="@string/view_port_new_visible_items" />

    <com.github.globocom.viewport.tv.ViewPortDpadRecyclerView
        android:id="@+id/activity_dpad_tv_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_dpad_tv_recycler_view_flow" />

</androidx.constraintlayout.widget.ConstraintLayout>